<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: width: 64, height: 64 }}">
    {%- endif -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% assign productCollections = product.collections | map: "handle" %}

    {% render 'meta-tags' %}
    {{ content_for_header }}

    {{ 'styles.min.css' | asset_url | stylesheet_tag }}
  {% include 'pagefly-app-header' %}</head>

  <body class="template-{{ template.name }} {% if page.template_suffix != nil %}template-{{ template.name }}--{{ page.template_suffix }}{% endif %}  {%- if settings.infos-banner != blank -%}info-banner-active{% endif %} "><div class="pagefly-container">
              {{ content_for_layout }}
            </div></body>

</html>
